# AWS Credentials from 1Password
# Managed by chezmoi - secrets never committed to Git

{{- if (onepasswordRead "op://Personal/AWS Personal/access_key_id") }}
[default]
aws_access_key_id = {{ onepasswordRead "op://Personal/AWS Personal/access_key_id" }} # allow-secret
aws_secret_access_key = {{ onepasswordRead "op://Personal/AWS Personal/secret_access_key" }} # allow-secret
region = {{ onepasswordRead "op://Personal/AWS Personal/region" }}
{{- else }}
# AWS credentials not found in 1Password
# To enable:
# 1. Create 1Password item: "AWS Personal" (API Credential type)
# 2. Add fields: access_key_id, secret_access_key, region
# 3. Run: chezmoi apply
{{- end }}

{{- if (onepasswordRead "op://Personal/AWS Work/access_key_id") }}

[work]
aws_access_key_id = {{ onepasswordRead "op://Personal/AWS Work/access_key_id" }} # allow-secret
aws_secret_access_key = {{ onepasswordRead "op://Personal/AWS Work/secret_access_key" }} # allow-secret
region = {{ onepasswordRead "op://Personal/AWS Work/region" }}
{{- end }}
