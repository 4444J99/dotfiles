#!/usr/bin/env bash
# Clean up stale files and organize home directory
# One-time: runs once per machine via chezmoi run_once
set -euo pipefail

log() { printf '  %s\n' "$*"; }

sort_to() {
  local f="$1" dest="$2"
  if [[ -e "$f" ]]; then
    mkdir -p "$dest"
    mv "$f" "$dest/"
    log "Sorted $(basename "$f") â†’ ${dest/#$HOME/~}/"
  fi
}

delete() {
  local f="$1"
  if [[ -e "$f" ]]; then
    rm -rf "$f"
    log "Deleted $(basename "$f")"
  fi
}

echo "ðŸ§¹ Cleaning up home directory clutter..."

